        xmlns:control="https://github.com/MoFeng-02/MFToolkit/tree/main/src/AvaloniaUI">
    <Design.PreviewWith>
        <Border Padding="20" Width="400">
            <!-- Add Controls for Previewer Here -->
            <control:MFTabbar>
                <control:MFTabbarItem Label="12"></control:MFTabbarItem>
